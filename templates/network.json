{
  /*
   * ============================================================================
   * NETWORK TEMPLATE - VNet, Subnets, NSGs
   * ============================================================================
   * Purpose: Creates isolated network infrastructure with security
   * 
   * Dependencies: None (deploys in parallel with monitoring)
   * 
   * Resources Created:
   *   1. NSG for APIM - Controls traffic to APIM subnet
   *   2. NSG for App Gateway - Controls public access
   *   3. Virtual Network - Isolated network (10.x.0.0/16)
   *   4. APIM Subnet - For API Management (10.x.1.0/24)
   *   5. App Gateway Subnet - For Application Gateway (10.x.2.0/24)
   * 
   * Returns:
   *   - apimSubnetId → Used by apim.json for VNet integration
   *   - appGatewaySubnetId → Used by appgateway.json for placement
   * ============================================================================
   */

  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  
  "parameters": {
    "location": {
      // Azure region
      "type": "string"
    },
    "vnetName": {
      // Generated as: {projectName}-{environment}-vnet
      "type": "string"
    },
    "vnetAddressPrefix": {
      // Dev: 10.0.0.0/16, Staging: 10.5.0.0/16, Prod: 10.10.0.0/16
      "type": "string"
    },
    "apimSubnetPrefix": {
      // Must be within VNet range - typically 10.x.1.0/24
      "type": "string"
    },
    "appGatewaySubnetPrefix": {
      // Must be within VNet range - typically 10.x.2.0/24
      "type": "string"
    }
  },
  
  "resources": [
    /*
     * NSG FOR APIM SUBNET
     * Allows: Management traffic (3443), Health probes (6390), Internal HTTPS (443)
     */
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2023-04-01",
      "name": "[concat(parameters('vnetName'), '-apim-nsg')]",
      "location": "[parameters('location')]",
      "properties": {
        "securityRules": [
          {
            "name": "AllowApiManagementControl",
            // Port 3443 - APIM management endpoint
            "properties": {
              "priority": 100,
              "direction": "Inbound",
              "access": "Allow",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "3443",
              "sourceAddressPrefix": "ApiManagement",
              "destinationAddressPrefix": "VirtualNetwork"
            }
          },
          {
            "name": "AllowAzureLoadBalancer",
            // Port 6390 - Health probe traffic
            "properties": {
              "priority": 110,
              "direction": "Inbound",
              "access": "Allow",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "6390",
              "sourceAddressPrefix": "AzureLoadBalancer",
              "destinationAddressPrefix": "VirtualNetwork"
            }
          },
          {
            "name": "AllowAppGatewayTraffic",
            // Port 443 - Traffic FROM App Gateway TO APIM
            "properties": {
              "priority": 120,
              "direction": "Inbound",
              "access": "Allow",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "443",
              "sourceAddressPrefix": "[parameters('appGatewaySubnetPrefix')]",
              "destinationAddressPrefix": "*"
            }
          }
        ]
      }
    },
    
    /*
     * NSG FOR APP GATEWAY SUBNET
     * Allows: Public HTTPS/HTTP (443/80), Gateway Manager ports
     */
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2023-04-01",
      "name": "[concat(parameters('vnetName'), '-appgw-nsg')]",
      "location": "[parameters('location')]",
      "properties": {
        "securityRules": [
          {
            "name": "AllowHTTPS",
            // Port 443 - Public HTTPS traffic from Internet
            "properties": {
              "priority": 100,
              "direction": "Inbound",
              "access": "Allow",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "443",
              "sourceAddressPrefix": "Internet",
              "destinationAddressPrefix": "*"
            }
          },
          {
            "name": "AllowHTTP",
            // Port 80 - Public HTTP (will redirect to HTTPS)
            "properties": {
              "priority": 110,
              "direction": "Inbound",
              "access": "Allow",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "80",
              "sourceAddressPrefix": "Internet",
              "destinationAddressPrefix": "*"
            }
          },
          {
            "name": "AllowGatewayManager",
            // Ports 65200-65535 - Azure infrastructure management
            "properties": {
              "priority": 120,
              "direction": "Inbound",
              "access": "Allow",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "65200-65535",
              "sourceAddressPrefix": "GatewayManager",
              "destinationAddressPrefix": "*"
            }
          }
        ]
      }
    },
    
    /*
     * VIRTUAL NETWORK
     * Isolated network space for all resources
     */
    {
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2023-04-01",
      "name": "[parameters('vnetName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkSecurityGroups', concat(parameters('vnetName'), '-apim-nsg'))]",
        "[resourceId('Microsoft.Network/networkSecurityGroups', concat(parameters('vnetName'), '-appgw-nsg'))]"
      ],
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('vnetAddressPrefix')]"  // e.g., 10.0.0.0/16
          ]
        },
        "subnets": [
          /*
           * APIM SUBNET - Internal VNet mode
           * Service Endpoints: Storage, SQL, Key Vault
           */
          {
            "name": "apim-subnet",
            "properties": {
              "addressPrefix": "[parameters('apimSubnetPrefix')]",  // e.g., 10.0.1.0/24
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat(parameters('vnetName'), '-apim-nsg'))]"
              },
              "serviceEndpoints": [
                { "service": "Microsoft.Storage" },
                { "service": "Microsoft.Sql" },
                { "service": "Microsoft.KeyVault" }
              ],
              "delegations": [],
              "privateEndpointNetworkPolicies": "Disabled",
              "privateLinkServiceNetworkPolicies": "Enabled"
            }
          },
          /*
           * APP GATEWAY SUBNET - Public-facing
           * No delegation needed
           */
          {
            "name": "appgateway-subnet",
            "properties": {
              "addressPrefix": "[parameters('appGatewaySubnetPrefix')]",  // e.g., 10.0.2.0/24
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat(parameters('vnetName'), '-appgw-nsg'))]"
              },
              "delegations": [],
              "privateEndpointNetworkPolicies": "Disabled",
              "privateLinkServiceNetworkPolicies": "Enabled"
            }
          }
        ],
        "enableDdosProtection": false  // Basic DDoS protection (included free)
      }
    }
  ],
  
  "outputs": {
    "vnetId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName'))]"
    },
    
    // Used by: apim.json for VNet integration
    "apimSubnetId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), 'apim-subnet')]"
    },
    
    // Used by: appgateway.json for placement
    "appGatewaySubnetId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), 'appgateway-subnet')]"
    }
  }
}
